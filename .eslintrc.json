  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js"],
      "parser": "@typescript-eslint/parser"
    }
  ],
  "settings": {
    "tailwindcss": {
      "callees": ["classnames", "clsx", "ctl", "tw", "twMerge", "cn", "cva"]
    }
  }
